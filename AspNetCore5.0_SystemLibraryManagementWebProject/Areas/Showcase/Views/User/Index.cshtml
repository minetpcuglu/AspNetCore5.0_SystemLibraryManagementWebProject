@model List<EntityLayer.Concrete.User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row animated fadeInRight">
        <div class="col-md-4">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Kullanıcı Profili</h5>
                </div>
                <div>
                    @foreach (var user in Model)
                    {


                        <div class="ibox-content no-padding border-left-right">
                            <img alt="image" class="img-fluid" src="/img/@user.Image">
                        </div>
                        <div class="ibox-content profile-content">
                            <h4><strong>@user.Name @user.Surname</strong></h4>
                            <p><i class="fa fa-star"></i> @user.UserName</p>
                            <p><i class="fa fa-star"></i> @user.Email</p>
                            <h5>
                                <strong>Hakkımda</strong>
                            </h5>
                            <p>
                                @user.Education
                                @user.Telephone
                            </p>
                            <div class="row m-t-lg">
                                <div class="col-md-4">
                                    <span class="bar">5,3,9,6,5,9,7,3,5,2</span>
                                    <h5><strong>169</strong> Kitaplar</h5>
                                </div>
                                <div class="col-md-4">
                                    <span class="line">5,3,9,6,5,9,7,3,5,2</span>
                                    <h5><strong>28</strong> Takipçi</h5>
                                </div>
                                <div class="col-md-4">
                                    <span class="bar">5,3,2,-1,-3,-2,2,3,5,2</span>
                                    <h5><strong>240</strong> Takip Ettigi</h5>
                                </div>
                            </div>
                            <div class="user-button">
                                <div class="row">
                                    <div class="col-md-6">
                                        <a href="/Showcase/User/UserEditProfile1/@user.UserId" class="btn btn-primary btn-sm btn-block"><i class="fa fa-search"></i> Düzenle</a>
                                    </div>
                                    <div class="col-md-6">
                                        @Html.ActionLink("Sil", "DeleteUser", new { id = user.UserId }, new { @class = "btn btn-danger btn-sm btn-block ", onclick = "return confirm('Silmek istiyor musunuz ?')" })
                                        @*<a href="/Writer/DeleteWriter/@writer.WriterId" class="btn btn-outline-primary btn-sm btn-block"><i class="fa fa-deaf"></i> <b> Sil</b> </a>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
        <div class="col-md-8">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Kitaplarım</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                @await Component.InvokeAsync("BookListByWriter", new { id = ViewBag.x })
            </div>

        </div>

    </div>
</div>
