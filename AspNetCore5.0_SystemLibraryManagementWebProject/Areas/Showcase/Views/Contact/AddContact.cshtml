        <!--//breadcrumbs ends here-->
        <!-- contact -->
        <div class="section contact" id="contact">
            <div class="container">
                <h4 class="rad-txt text-center">
                    <span class="abtxt1">İletişim</span>
                    <span class="abtext">Sayfası</span>
                </h4>
               
                    <div class="contact-form">
                        <div class="col-md-7">
                            <!-- contact form grid -->
                            <div class="contact-top1">
                                <h5>Bir Mesaj Oluştur</h5>
                                <form method="post" asp-controller="Contact" asp-action="AddCategory">
                                    <input type="text" name="Name" placeholder="İsim" required="">
                                    <input type="text" name="LastName" placeholder="Soyisim" required="">

                                    <input class="email" type="email" name="Mail" placeholder="Mail" required="">
                                    <input class="text" type="text" name="Subject" placeholder="Konu" required="">
                                    <br /><br />
                                    <textarea placeholder="Mesaj" name="Message"  required=""></textarea>
                                    <input type="submit" value="Submit" id="SubmitBtn" onclick="return confirm('Mesajı Göndermek Istediginize Eminmisiniz');" class="btn btn-success">
                                </form>
                            </div>
                            <!--  //contact form grid ends here -->
                        </div>
                        <!-- contact map grid -->
                        <div class="col-md-5 map contact-right">
                            <div class="contact-top1">
                                <h5>Konum</h5>
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3023.9503398796587!2d-73.9940307!3d40.719109700000004!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a27e2f24131%3A0x64ffc98d24069f02!2sCANADA!5e0!3m2!1sen!2sin!4v1441710758555"
                                        allowfullscreen></iframe>
                            </div>
                        </div>
                        <!--//contact map grid ends here-->
                        <div class="clearfix"></div>
                    </div>
                  
                    <!-- contact details -->
                    <div class="contact-bottom">
                        <h6>Admin İletişim</h6>
                        <!-- contact details left -->
                        <div class="col-md-6 col-sm-6">
                            <div class="contact-left">
                                <div class="address">
                                    <h5>Adres:</h5>
                                    <p>
                                        Kastamonu/Kuzeykent
                                        <br>Türkiye
                                    </p>
                                </div>
                                <div class="address address-mdl">
                                    <h5>Telefon:</h5>
                                    <p>
                                        0507 000 00 00
                                    </p>
                                    <p>
