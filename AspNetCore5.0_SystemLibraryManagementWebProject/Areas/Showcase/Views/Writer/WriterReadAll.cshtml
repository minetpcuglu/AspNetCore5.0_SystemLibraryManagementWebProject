        <div class="container">

            <div class="row">
                <br />
                <br />
                <ul class="btn-group btn-breadcrumb bc-list">
                    <li class="btn btn1">
                        <a href="index.html">
                            <i class="glyphicon glyphicon-home"></i>
                        </a>
                    </li>

                    <li class="btn btn2">

                        <a href="/Showcase/Book/Index/">Yazar Listesi</a>
                    </li>
                    <li class="btn btn3">
