@model List<Notice>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<h3>Duyurular</h3>
<br />
<br />
<table class="table table-bordered  table-hover">
    <tr>
        <th>#</th>
        <th>Kategori</th>
        <th>İçerik</th>
       
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var notice in Model)
    {
<tr>
    <td>@notice.Id</td>
    <th>@notice.Category</th>
    <th>@notice.Content</th>

    
    <td><a href="/Notice/DeleteNotice/@notice.Id" id="DeleteBtn" onclick="return confirm('Silmek Istediginize Eminmisiniz');" class="btn btn-outline-danger"> <b>Sil</b></a></td>
    <td><a href="/Notice/NoticeUpdate/@notice.Id" class="btn btn-outline-warning"> <b>Güncelle</b></a></td>
</tr>
    }
</table>
<br />
<a href="/Notice/AddNotice/" class="btn btn-primary">Yeni Duyuru Ekle</a>  @*basına admin eklendi*@
<br />
