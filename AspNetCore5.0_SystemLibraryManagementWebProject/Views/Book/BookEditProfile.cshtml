@model Book
@{
    ViewData["Title"] = "BookEditProfile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Kitap Düzenleme Sayfası</h1>

<br />

<form method="post" asp-controller="Book" asp-action="BookEditProfile" enctype="multipart/form-data">

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kitap Bilgileri Düzenleme</h4>


                @Html.HiddenFor(x => x.BookId, new { @class = "form-control" })

                <div>
                    <label asp-for="BookName"> <b>Kitap Adı:</b></label>
                    <input asp-for="BookName" class="form-control" />
                    <span asp-validation-for="BookName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="NumberPage"> <b>Sayfa Sayısı:</b></label>
                    <input asp-for="NumberPage" type="number" class="form-control" />
                    <span asp-validation-for="NumberPage" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="PrintDate"> <b>Basım Tarihi:</b></label>
                    <input asp-for="PrintDate" type="datetime-local" class="form-control" />
                    <span asp-validation-for="PrintDate" class="text-danger"></span>
                </div>


                <div>
                    <label asp-for="Publisher"><b>Yayınevi:</b></label>
                    <input asp-for="Publisher" class="form-control" />
                    <span asp-validation-for="Publisher" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BookImage"> <b>Resim:</b></label>
                    <input type="file" name="file" class="form-control" />

                </div>
                <div>
                    <label asp-for="BookDescription"> <b>Kitap Hakkında:</b></label>
                    <input asp-for="BookDescription" class="form-control" />
                    <span asp-validation-for="BookDescription" id="txtdescription" class="text-danger"></span>

                </div>
                <br />
                <label asp-for="CategoryId"> <b>Kategori:</b></label>
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.value, new { @class = "form-control" })
                <span asp-validation-for="CategoryId" class="text-danger"></span>
                <br />
                <br />
                <label asp-for="WriterId"> <b>Yazar:</b></label>
                @Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.value2, new { @class = "form-control" })
                <span asp-validation-for="WriterId" class="text-danger"></span>
                <br />

                <br />
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>

            </div>
        </div>
    </div>


</form>