@model List<Book>
@{
    ViewData["Title"] = "BookReadAll";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row animated fadeInRight">
        <div class="col-md-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Kitap Içeriği</h5>
                </div>
                <div>
                    @foreach (var book in Model)
                    {
                        Random r = new Random();
                        int sayi = r.Next(1, 100);
                        Random r2 = new Random();
                        int sayi2 = r.Next(1, 100);
                        <div class="ibox-content no-padding border-left-right">
                            <img alt="image" class="img-fluid" src="/img/@book.BookImage" style="width:250px; height:350px;">
                        </div>
                        <div class="ibox-content profile-content">
                            <h4><strong>Kitap Adı : @book.BookName </strong></h4>
                            <h4><strong>Yayınevi : @book.Publisher </strong></h4>
                            <h4><strong>Yayın Tarihi: @book.PrintDate.ToShortDateString() </strong></h4>
                            <h4><strong>Sayfa Sayısı : @book.NumberPage </strong></h4>
                            
                          
                            <p><i class="fa fa-star"></i> <strong>Tür: @book.Category.Name</strong> </p>
                            <h5>
                                <strong>Kitap Hakkında</strong>
                            </h5>
                            <p>
                                @book.BookDescription
                            </p>
                            <div class="row m-t-lg">
                                <div class="col-md-4">

                                    <span class="bar">5,3,9,6,5,9,7,3,5,2</span>
                                    @if (book.BookStatus == true)
                                    {
                                        <h5><strong>Yaşasın,</strong> Kitap Şuanda Mevcut </h5>
                                    }
                                    else
                                    {
                                        <h5><strong>Üzgünüz,</strong> Kitap Şuan Başka Kullanıcıda </h5>
                                    }

                                </div>
                                <div class="col-md-4">
                                    <span class="line">5,3,9,6,5,9,7,3,5,2</span>
                                    <h5><strong>@sayi</strong> defa Okundu</h5>
                                </div>
                                <div class="col-md-4">
                                    <span class="bar">5,3,2,-1,-3,-2,2,3,5,2</span>
                                    <h5><strong>@sayi2</strong> Like</h5>
                                </div>
                            </div>
                            <div class="user-button">
                                <div class="row">
                                    <div class="col-md-6">
                                        <a href="/Book/BookEditProfile/@book.BookId" class="btn btn-primary btn-sm btn-block"><i class="fa fa-search"></i> Düzenle</a>
                                    </div>
                                    <div class="col-md-6">
                                        @Html.ActionLink("Sil", "DeleteBook", new { id = book.BookId }, new { @class = "btn btn-danger btn-sm btn-block ", onclick = "return confirm('Silmek istiyor musunuz ?')" })
      
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
       

    </div>
</div>

