@model Message
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Mesaj Detay Sayfası</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="All"></div>
        <input type="hidden" name="BlogId" value="@Model.MessageId" />
        <div class="form-group">
            <label asp-for="Subject"><b> Başlık: </b>  </label>
            <input asp-for="Subject" class="form-control" value="@Model.Subject" />


        </div>


        <div class="form-group">
            <label asp-for="MessageDetail"><b>  Mesaj Detay: </b>  </label>
            <input asp-for="MessageDetail" class="form-control" value="@Model.MessageDetail" />


        </div>

        <td>
            <a href="/Message/Inbox/" class="btn btn-primary btn-sm">Mesajlara Dön</a>
        </td>

    </div>
    <br />
</div>




